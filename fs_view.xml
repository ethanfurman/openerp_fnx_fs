<?xml version="1.0"?>
<openerp>
    <data>

        <menuitem name="FnxFS" id="fnx_file_system"/>

        <record model="ir.ui.view" id="fnx_fs_form">
            <field name="name">File System</field>
            <field name="model">fnx_fs.files</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="File System" version="7.0">
                    <header>
                        <button string="Refresh" name="_scan_fs" type="object"/>
                    </header>
                    <sheet string="Files">
                        <group>
                            <group>
                                <field name="user_id" attrs="{'readonly':True}"/>
                                <field name="filepath" attrs="{'readonly':True}"/>
                                <field name="filename" attrs="{'readonly':True}"/>
                            </group>
                            <!--
                            <group>
                                <field name="image_small" widget='image' class="oe_image oe_right" nolabel="1" attrs="{'readonly':True}"/>
                                <field name="status" attrs="{'readonly':True, 'invisible':[('status','!=','unable to contact')]}" nolabel="1"/>
                            </group> -->
                        </group>
                    <notebook colspan="4">
                        <page string="Shared To">
                        </page>
                        <page string="History">
                        </page>
                    </notebook>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
                </form>
            </field>
        </record>

